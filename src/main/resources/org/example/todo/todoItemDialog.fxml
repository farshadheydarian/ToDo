<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.todo.DialogController"
            prefHeight="400.0" prefWidth="600.0">

    <headerText>
        we could put instructions here
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="short description : " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="shortDescription" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Details : " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="detailArea" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"/>
            <Label text="DeadLine : " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="deadLinePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
